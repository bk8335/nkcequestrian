<% @posts.each do |post| %>
	<%= link_to(image_tag(post.image_url.to_s, class: "img-responsive blog-image"), post) %>
	<%= post.content.truncate_words(55).html_safe %>
	<br>
	<% if session[:admin] then %>
 		<%= link_to edit_post_path(post), class: "btn btn-default" do %>
 			<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
 		<% end %>
	<% end %>
<% end %>